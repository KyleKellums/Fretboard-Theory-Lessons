@model IEnumerable<Fretboard_Theory_Course.Models.Advanced>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LessonName)
                </th>                

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LessonName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdvancedId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AdvancedId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AdvancedId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
